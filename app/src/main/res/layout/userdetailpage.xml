<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kimmternship.pedometergui.UserDetailsPage">

    <RadioButton
        android:id="@+id/IsMale"
        android:layout_width="87dp"
        android:layout_height="31dp"
        android:text="Male"
        app:layout_constraintLeft_toRightOf="@+id/SexIdentifier"
        android:layout_marginLeft="53dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onRadioButtonClicked"/>
        android:layout_marginTop="54dp" />

    <RadioButton
        android:id="@+id/IsFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        app:layout_constraintLeft_toRightOf="@+id/IsMale"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        android:onClick="onRadioButtonClicked"/>
        app:layout_constraintHorizontal_bias="0.733" />

    <TextView
        android:id="@+id/SexIdentifier"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:text="Sex"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/IsFemale"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:text="Enter Height"
        android:textSize="22sp"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.215"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.023" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="146dp"
        android:layout_height="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.239" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:text="In Inches"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="72dp" />
</android.support.constraint.ConstraintLayout>
